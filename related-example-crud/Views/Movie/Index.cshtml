@model IEnumerable<related_example_crud.Models.Movie>   
    <div>
         <a class="btn btn-primary" asp-area="" asp-controller="Movie" asp-action="Create">Create </a>              
    </div>
    <br/>

@if (Model.Count()>0)
{
    
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">name</th>
    </tr>
  </thead>
  <tbody>
   @foreach (var item in Model)
   {
       <tr>
           <td>@item.Id</td>
           <td>@item.Title</td>
           <td>@foreach (var a in item.MovieGenres)
               {
                @if (a.MovieId==item.Id){
                 <ul>
                  <li>@a.Genre.Name</li>
                 </ul>
                 }
               }
           </td>             
           <td>
                <div class="col-3 text-center">
                    <a class="btn btn-outline-success" asp-controller="Movie" asp-action="Update" asp-route-Id="@item.Id" >Update</a>
                    <a class="btn btn-outline-danger" asp-controller="Movie" asp-action="Delete" asp-route-Id="@item.Id" >Delete</a>
                </div>
           <td/>
       </tr>
   }
  </tbody>
</table>
}
else{
    <p>no product</p>
}
